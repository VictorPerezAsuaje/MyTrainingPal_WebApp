@using MyTrainingPal.Domain.Entities
@model WorkoutHistory

<div class="card my-5 p-3">
    <div class="row ">
        <div class="col-md-5">
            <img class="exercise-thumb" src="~/fitness_tracker.svg" />
        </div>
        <div class="col-md-7 px-3">
        <div class="card-block px-6">
            <small class="card-meta mb-2">@Model.Workout.WorkoutType</small>
            <h4 class="card-title mt-0 ">
            @Model.Workout.Name</h4>
            <div class="media">
                <div class="media-body workout-data">
                    <small># Exercises: @Model.Workout.Sets.Count</small>
                </div>
            </div>
            <br>
            <a class="mt-auto btn btn-primary" asp-controller="Workout" asp-action="StartWorkout" asp-route-workoutId="@Model.Workout.Id">Do again</a>
        </div>
        </div>
    </div>
</div>
