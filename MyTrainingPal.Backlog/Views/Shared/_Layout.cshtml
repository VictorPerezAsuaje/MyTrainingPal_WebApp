<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyTrainingPal</title>
    <meta name="theme-color" content="#2196f3" />
    <link rel="stylesheet" href="~/lib/bootstrap-5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyTrainingPal.Backlog.styles.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar fix-bottom-sm navbar-expand-sm navbar-dark bg-dark px-5">
            <a class="navbar-brand d-none d-sm-block" asp-area="" asp-controller="Workout" asp-action="Index">
                <img id="logo" src="/MyTrainingPal_logotipo.png" width="40" height="40" />
            </a>
            <div id="navbarCollapse" class="w-100">
                <ul class="navbar-nav mr-auto justify-content-around justify-content-sm-end">
                    <a class="nav-link" asp-area="" asp-controller="Workout" asp-action="Index">
                    <li class="nav-item text-white">
                        <i class="menu-icon bi bi-house-fill d-sm-none d-md-none d-lg-none @(ViewContext.RouteData?.Values["Controller"]?.ToString() == "Workout" ? "selected" : "")"></i>
                        <span class="d-none d-sm-block">Workouts</span>
                        </li>
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Index">
                            <li class="nav-item">
                                <i class="menu-icon bi bi-person-circle d-sm-none d-md-none d-lg-none @(ViewContext.RouteData?.Values["Controller"]?.ToString() == "Profile" ? "selected" : "")"></i>
                                <span class="d-none d-sm-block">Profile</span>
                            </li>
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" asp-page="/Account/Login">
                            <li class="nav-item text-white">
                                <i class="bi bi-person-circle d-sm-none d-md-none d-lg-none"></i>
                                <span class="d-none d-sm-block">Log in</span>
                            </li>
                        </a>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <partial name="_NotificationToastPartial" />
        
        <main role="main" class="main-content content px-2">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap-5.1.3/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/serviceWorker.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker
                .register('/js/serviceWorker.js')
                .then(function () { console.log('Service Worker Registered'); });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
